<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ResonateXamarin.Views.LoginPage">
    <ContentPage.Content>
        <Grid>
            <Image x:Name="imgBackground" Aspect="AspectFill"/>
            <Label Text="Login to find new people to connected with." TextColor="#FFFFFF" FontAttributes="Bold" HorizontalOptions="Center" FontSize="32" Margin="20,40,20,0"/>
            <StackLayout Orientation="Vertical" VerticalOptions="End" Margin="20,20,20,30">
                <Button x:Name="btnLogin" Text="LOGIN WITH SPOTIFY" TextColor="#FFFFFF" FontSize="Large" BackgroundColor="#1DB954" Clicked="btnLoginOn_Clicked" BorderRadius="25"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
