                    <Grid ColumnSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <BoxView BackgroundColor="#1e9b6c"/>
                        <Label Text="Rock and Roll" BackgroundColor="#3f4648" Grid.Column="1"/>
                    </Grid>
